{
  "version": 2,
  "builds": [
    {
      "src": "src/index.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "node_modules/iconv-lite/**",
          "node_modules/raw-body/**",
          "node_modules/body-parser/**"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/favicon-icon.ico",
      "dest": "/src/public/favicon-icon.ico",
      "methods": ["GET"]
    },
    {
      "src": "/api/(.*)",
      "dest": "src/index.js",
      "methods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"]
    },
    {
      "src": "/(.*)",
      "dest": "src/index.js",
      "methods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"]
    }
  ]
}