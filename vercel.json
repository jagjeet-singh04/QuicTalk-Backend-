{
  "version": 2,
  "builds": [
    {
      "src": "src/index.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "node_modules/mongoose/**",
          "src/preload-mongoose.js"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/favicon.ico",
      "dest": "/src/public/favicon.ico",
      "methods": ["GET"]
    },
    {
      "src": "/api/(.*)",
      "dest": "src/index.js",
      "methods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"]
    },
    {
      "src": "/(.*)",
      "dest": "src/index.js",
      "methods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"]
    }
  ]
}